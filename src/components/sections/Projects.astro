---
import Section from "../Section.astro";

import { projects } from "@cv";
---

<Section title="Proyects">

    <ul>
        {
            projects.map(( { url, description, highlights, name, isActive }) => {

                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a href={url} title={`Ver el proyecto ${name}`}> 
                                        { name }
                                    
                                    </a>
                                    {
                                        isActive && <span> &bull; </span>
                                    }
                                </h3>
                                <p>{ description }</p>
                            </header>               
                            <footer>
                                {
                                    highlights.map((x) => {
                                        return (
                                            <span>{ x }</span>
                                        )
                                    
                                    })
                                }

                            </footer>           
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>


<style>

    ul {
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(200px, 1fr)
        );
        gap: 1rem;
        list-style: none;
        margin-inline: -16px;
        padding-left: 0px;

        & li {
            margin: 20px;

            & article {
                border-radius: 6px;
                border: 1px solid #f2f2f2;
                gap: 16px;
                display: flex;
                flex-direction: column;
                padding: 3px;
                margin: 16px;
                height: 100%;

                & header {
                    flex: 1;
                }

                & footer {
                    display: flex;
                    flex-wrap: wrap;
                    gap: 4px;
                    font-size: 0.6rem;

                    & span {
                        border-radius: 6px;
                        background: #eee;
                        color: black;
                        font-size: 0.5rem;
                        font-weight: 500;
                        padding: 0.2rem 0.6rem;
                    }
                }
            }
        }
    }

    article h3 {
        margin-bottom: 4px;
    }

    article a {
        color: #333;
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.8rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    article h3 span {
        color: green;
    }
</style>