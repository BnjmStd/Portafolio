---
import PrintIcon from '@/icons/print.astro';
---

<footer>
    Pulsa <kbd>cmd</kbd> + <kbd>k</kbd> para ver las opciones.
    <PrintIcon /> 
</footer>


<ninja-keys placeholder="Buscar Comando: " hideBreadcrumbs>

</ninja-keys>

<script>
    import "ninja-keys";

    const ninja = document.querySelector("ninja-keys");

    if (ninja !== null) {
        ninja.data = [
            {
                id: "proyects",
                title: "Imprimir <PrintIcon />" ,
                hotkey: "ctrl+P" ,
                section: "Proyects",
                handler: () => {
                    window.print();
                },
            },
        ]
    }
</script>

<style>
    @media print {
        ninja-keys {
            display: none;
        }

        footer {
            display: none;
        }
    }

    footer {
        background: #fdfdfd;
        border-top: 1px solid #eee;
        position: fixed;
        bottom: 0;
        width: 100%;
        padding-block: 16px;
        text-align: center;
    }

    kbd {
        background: #eee;
        border-radius: 4px;
        padding: 2px 4px;
        font-size: 12px;
        font-family: cursive;
    }
</style>